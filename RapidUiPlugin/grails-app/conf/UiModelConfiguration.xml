<Rsmodel>
    <Models>
        <!-- -->
        <Model Name="UiUrl" StorageType="FileAndMemory">
            <Properties>
                <Property Name='url' Type='string' IsKey="true"/>
            </Properties>
        </Model>

        <Model Name="UiTab" StorageType="FileAndMemory">
            <Properties>
                <!-- Add url relation to keys -->
                <Property Name='name' Type='string' IsKey="true"/>
            </Properties>
        </Model>
        <Model Name="UiLayout" StorageType="FileAndMemory">
            <Properties>
            </Properties>
        </Model>
        <Model Name="UiLayoutUnit" StorageType="FileAndMemory">
            <Properties>
                 <!-- Add parentLayout relation to keys -->
                <Property Name='type' Type='string' IsKey="true"/>
                <Property Name='htmlContent' Type='string'/>
            </Properties>
        </Model>
        <Model Name="UiComponent" StorageType="FileAndMemory">
            <Properties>
                <!-- Add tab relation to keys -->
                <Property Name='name' Type='string' IsKey="true"/>
                <Property Name='title' Type='string'/>
            </Properties>
        </Model>
        <Model Name="UiDialog" StorageType="FileAndMemory">
            <Properties>
                <!-- Add tab and component relation to keys -->
                <Property Name='width' Type='number'/>
                <Property Name='height' Type='number'/>
                <Property Name='maxHeight' Type='number'/>
                <Property Name='minHeight' Type='number'/>
                <Property Name='minWidth' Type='number'/>
                <Property Name='maxWidth' Type='number'/>
                <Property Name='title' Type='string'/>
            </Properties>
        </Model>
        <Model Name="UiForm" StorageType="FileAndMemory">
            <Properties>
                <!-- Add tab relation to keys -->
                <!-- submitAction is inList([GET, POST]) -->
                <Property Name='name' Type='string' IsKey="true"/>
                <Property Name='width' Type='number'/>
                <Property Name='htmlContent' Type='string'/>
                <Property Name='saveUrl' Type='string'/>
                <Property Name='createUrl' Type='string'/>
                <Property Name='editUrl' Type='string'/>
                <Property Name='updateUrl' Type='string'/>
                <Property Name='submitAction' Type='string' Default="GET"/>
            </Properties>
        </Model>
        <!-- Define actions as sub classes -->
         <Model Name="UiAction" StorageType="FileAndMemory">
            <Properties>
                <!-- Add tab relation to keys -->
                <Property Name='name' Type='string' IsKey="true"/>
                <Property Name='condition' Type='string'/>
            </Properties>
        </Model>
        <Model Name="UiJavaScript" StorageType="FileAndMemory">
            <Properties>
                <Property Name='content' Type='string'/>
            </Properties>
        </Model>
    </Models>
    <Relations>
        <Relation From="UiUrl" To="UiTab" Name="tabs" ReverseName="url" Type="OneToMany"></Relation>
        <Relation From="UiTab" To="UiLayout" Name="layout" ReverseName="tab" Type="OneToOne"></Relation>
        <Relation From="UiTab" To="UiComponent" Name="components" ReverseName="tab" Type="OneToMany"></Relation>
        <Relation From="UiTab" To="UiJavaScript" Name="javascript" ReverseName="tab" Type="OneToOne"></Relation>
        <Relation From="UiTab" To="UiDialog" Name="dialogs" ReverseName="tab" Type="OneToMany"></Relation>
        <Relation From="UiTab" To="UiForm" Name="forms" ReverseName="tab" Type="OneToMany"></Relation>
        <Relation From="UiTab" To="UiAction" Name="actions" ReverseName="tab" Type="OneToMany"></Relation>
        <Relation From="UiLayout" To="UiLayoutUnit" Name="units" ReverseName="parentLayout" Type="OneToMany"></Relation>
        <Relation From="UiLayoutUnit" To="UiLayout" Name="childLayout" ReverseName="parentUnit" Type="OneToOne"></Relation>
        <Relation From="UiLayoutUnit" To="UiComponent" Name="component" ReverseName="layoutUnit" Type="OneToOne"></Relation>
        <Relation From="UiDialog" To="UiComponent" Name="component" ReverseName="dialog" Type="OneToOne"></Relation>
    </Relations>

</Rsmodel>
