class OpenNmsSecurityFilters {
    def filters = {
        def adminControllers = ["openNMsHttpConnection", "openNMsHttpDatasource"];
        adminAuthorization(controller: "(" + adminControllers.join("|") + ")", action: "*") {
            before = {
                accessControl {
                    role(Role.ADMINISTRATOR)
                }

            }
        }
    }
}